---
import clsx from "clsx";

const features = [
	{
		name: "Visualize Infrastructure",
		description:
            "Visualize and monitor your cloud infrastructure with inter " +
			"connections made between your resources in real-time.",
		icon: "/assets/images/cloud.svg",
		// image: "/assets/images/cloud-view.webp"
	},
	{
		name: "Multiple Projects and Services",
		description:
            "Manage and monitor multiple projects and services from different providers in one dashboard.",
		icon: "/assets/images/dots.svg",
		// image: "/assets/images/multiple-services.webp",
		// image2: "/assets/images/multiple-projects.webp"
	},
	{
		name: "Save Time and Cost",
		description:
            "Cut down on unnecessary time spent deciphering system architecture and resource connections. " +
			"Discover and remove orphaned resources to avoid unnecessary costs.",
		icon: "/assets/images/clock.svg",
		// image: "/assets/images/diagnose.webp"
	},
	{
		name: "Observability",
		description: "View useful information from different resources being used in your infrastructure. " +
		"This allows you to understand your ecosystem and system usage better.",
		icon: "/assets/images/eye.svg",
		// image: "/assets/images/cloud-monitor.webp"
	},
	{
		name: "Real Time Alerts",
		description:
            "Set up real alerts with custom rules to receive notifications for resource state changes.",
		icon: "/assets/images/alert.svg",
		comingSoon: true,
	},
	{
		name: "Diagnose and Debug Problems",
		description:
            "Monitor and Debug failing requests and resources in real-time. " +
			"Access additional logs and audits to identify point of failure in your resrouces.",
		icon: "/assets/images/diagnose.svg",
		comingSoon: true,
	},
];
---

<div class="lg:mx-48 md:mx-20 p-4 mt-10">
	<div class="grid grid-cols-2 gap-4">
		{
			features.map((item) => {
				return (
					<div
						class={clsx(
							"shadow-lg rounded-2xl p-10 bg-white col-span-2 text-base",
							"md:col-span-1 col-span-2 relative overflow-hidden",
						)}
					>
						{item.comingSoon && (
							<div class="text-sm font-semibold absolute bg-black text-white px-2 py-1 coming-soon">
                                Coming Soon
							</div>
						)}
						<div class="bg-black rounded-md p-2 w-10 h-10">
							<img src={item.icon} alt={item.name + "_icon"} />
						</div>
						<div class="mt-3 font-semibold">{item.name}</div>
						<p class="mt-3">{item.description}</p>
					</div>
				);
			})
		}
	</div>
</div>
