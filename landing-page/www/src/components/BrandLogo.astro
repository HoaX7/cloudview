---
import clsx from "clsx";
interface Props {
    size?: "2xl" | "3xl";
    width?: number;
}
const width = Astro.props.width || "24";
---

<a
	class={clsx(
		"flex items-center font-bold",
		Astro.props.size === "2xl" ? "text-2xl" : Astro.props.size === "3xl" ? "text-3xl" : "text-xl",
	)}
	id="logo"
	href="/"
	style="color: #478af5;"
>
	<img
		src="/assets/images/cloudfriendly-logo.svg"
		width={width}
		alt="cloudfriendly"
		class="mr-2"
		height={width}
	/> Cloud Friendly
</a>
