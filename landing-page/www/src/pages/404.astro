---
import MainLayout from "../layouts/MainLayout.astro";
import BrandLogo from "../components/BrandLogo.astro";
---

<MainLayout hideNavbar url="" keywords="" description="" title="">
	<div class="flex flex-col justify-center items-center h-full text-center lg:mx-48 md:mx-20">
		<BrandLogo size="3xl" width={40} />
		<h1 class="font-bold mt-5">404: Page Under Construction</h1>
		<p class="mt-3">We're sorry, but this page is currently under construction. 
			We're working to bring you the content you're looking for. 
			Please check back later.</p>
		<p class="mt-3">In the meantime, feel free to explore other sections of our website.</p>
		<a class="bg-site-gradient text-white font-semibold text-sm px-4 py-3 rounded-full mt-5" href="/">
			Home
		</a>
	</div>
</MainLayout>